<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:columnCount="5"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mandiecohoon.soundofsilence.MainActivity" >

    <Space
        android:layout_width="203dp"
        android:layout_height="1dp"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal" />

    <Space
        android:layout_width="66dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="119dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_gravity="fill_vertical"
        android:layout_row="5" />

    <TextView
        android:id="@+id/songProgressTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="0"
        android:gravity="center"
        android:text="@string/timer"
        android:textAlignment="gravity"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:id="@+id/songProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="start|center_vertical"
        android:layout_row="0" />

    <TextView
        android:id="@+id/guessText"
        android:layout_width="match_parent"
        android:text="@string/guess_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

    <Button
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="0"
        android:text="@string/button_play" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_row1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_row1_1"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_row1_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/toggle_row1_2"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_row1_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/toggle_row1_3"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_row1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_row1_4"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_row2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_row2_1"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_row2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_row2_2"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_row2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_row2_3"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_row2_4"
                android:layout_width="wrap_content"
                android:text="@string/toggle_row2_4"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_row3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_row3_1"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_row3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_row3_2"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_row3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_row3_3"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button_row3_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/toggle_row3_4"
                android:textSize="12sp"
                tools:ignore="ButtonStyle" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/clearGuess"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="6"
        android:text="@string/clearGuess_text" />

</GridLayout>