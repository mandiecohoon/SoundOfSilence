<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mandiecohoon.soundofsilence.MainActivity" >

    <Space
        android:layout_width="203dp"
        android:layout_height="1dp"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal" />

    <Space
        android:layout_width="66dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_width="34dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="119dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_column="4"
        android:layout_gravity="fill_vertical"
        android:layout_row="5" />

    <TextView
        android:id="@+id/songProgressTime"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="0"
        android:text="@string/timer"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:id="@+id/songProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="286dp"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="0" />

    <Button
        android:id="@+id/play"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="0"
        android:text="@string/button_play" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="5"
        android:text="@string/toggle_1"
        android:textOff="@string/toggle_1"
        android:textOn="@string/toggle_1" />

    <ToggleButton
        android:id="@+id/toggleButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="5"
        android:text="@string/toggle_2"
        android:textOff="@string/toggle_2"
        android:textOn="@string/toggle_2" />

    <ToggleButton
        android:id="@+id/toggleButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="@string/toggle_3"
        android:textOff="@string/toggle_3"
        android:textOn="@string/toggle_3" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="5"
        android:text="@string/toggle_4"
        android:textOff="@string/toggle_4"
        android:textOn="@string/toggle_4" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="5"
        android:text="@string/toggle_5"
        android:textOff="@string/toggle_5"
        android:textOn="@string/toggle_5" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:layout_row="5"
        android:text="@string/toggle_6"
        android:textOff="@string/toggle_6"
        android:textOn="@string/toggle_6" />

    <ToggleButton
        android:id="@+id/toggleButton7"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_row="5"
        android:text="ToggleButton" />

    <ToggleButton
        android:id="@+id/toggleButton8"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="5"
        android:text="ToggleButton" />

    <ToggleButton
        android:id="@+id/toggleButton9"
        android:layout_column="0"
        android:layout_gravity="right|bottom"
        android:layout_row="5"
        android:text="ToggleButton" />

</GridLayout>